<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.example.ana.ultimatewarrior.CameraActivity">

    <SurfaceView
        android:id="@+id/preview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <ImageView
        android:id="@+id/gold_mine_1"
        android:layout_width="200dp"
        android:layout_height="353dp"
        android:layout_gravity="center"
        android:src="@drawable/gold_mine_1"
        android:visibility="visible" />

    <Button
        android:id="@+id/CatchItButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="20dp"
        android:background="@drawable/map_catchit_button"
        android:text="@string/catch_it" />

</FrameLayout>